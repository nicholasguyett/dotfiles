#!/bin/bash
echo "Updating System"
sudo apt-get update -y
sudo apt-get upgrade -y

if ! command -v yarn &> /dev/null
then
  echo "Updating yarn"
  yarn global upgrade
fi

echo "Updating vim"
vim +PluginUpdate +qall

read -p $'All upgrades have finished\n[Press any key to continue]' _
clear && fortune | cowsay
